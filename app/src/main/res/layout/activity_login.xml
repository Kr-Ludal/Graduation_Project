<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backLogin"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/cardview_shadow_end_color"
            app:srcCompat="@drawable/ic_launcher_chevron_foreground" />

        <TextView
            android:layout_marginLeft="13dp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:textColor="@color/res_text_color_black"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginVertical="5dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16dp"
            android:textColor="@color/res_text_color_black"/>

        <EditText
            android:id="@+id/edtxtId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:textSize="28sp"
            android:hint="Enter your email"
            android:inputType="textPersonName"
            android:background="@null"
            android:textColor="@color/res_text_color_black"
            android:textColorHint="@color/res_text_hint_gray" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16dp"
            android:textColor="@color/res_text_color_black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edtxtPw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:textSize="28sp"
                android:hint="Enter your Password"
                android:inputType="textPassword"
                android:background="@null"
                android:textColor="@color/res_text_color_black"
                android:textColorHint="@color/res_text_hint_gray"/>

            <ImageButton
                android:id="@+id/passwordVisibility"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_eye_foreground"
                android:layout_gravity="center_horizontal"
                android:background="#00FFFFFF"
                />
        </LinearLayout>


        <Button
            android:id="@+id/btnEnter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_radius_black"
            android:enabled="false"
            android:text="Log in"
            android:textAllCaps="false"
            android:textColor="@color/res_btn_color_white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txtpwfind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Forgot your password?"
            android:textAlignment="center"
            android:textColor="@color/res_text_color_black"
            android:textSize="17dp"
            />

        <Button
            android:id="@+id/btnGithub"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/btn_radius"
            android:textColor="@color/res_text_color_black"
            android:text="Continue with Github"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:layout_marginTop="150dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawableLeft="@drawable/fill_1"
            />


    </LinearLayout>

</LinearLayout>