<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_color_white"
    android:layout_marginBottom="?attr/actionBarSize"
    tools:context=".ui.post.WriteFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/write_select_language_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:visibility="visible"
                >

                <ImageView
                    android:id="@+id/write_checkitem_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="30dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_round_keyboard_arrow_left_24"
                    />

                <TextView
                    android:id="@+id/write_text_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="프로그래밍 언어를\n선택해주세요."
                    android:layout_marginTop="38dp"
                    android:textColor="@color/res_text_color_black"
                    android:textSize="28sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textStyle="bold"
                    />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:id="@+id/write_item_group"
            >


            <RadioButton
                android:id="@+id/radio_python"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/ic_python"
                android:drawablePadding="10dp"
                android:text="Python"
                android:textSize="16sp"
                android:paddingHorizontal="22dp"
                android:background="@drawable/write_item_selector"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/ic_launcher_checked_foreground"
                android:textStyle="normal"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/res_text_color_black"
                />

            <RadioButton
                android:id="@+id/radio_cplpl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="C++"
                android:textSize="16sp"
                android:paddingHorizontal="22dp"
                android:drawablePadding="10dp"
                android:background="@drawable/write_item_selector"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/ic_launcher_checked_foreground"
                android:drawableLeft="@drawable/ic_cplpl"
                android:textStyle="normal"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/res_text_color_black"
                />
            <RadioButton
                android:id="@+id/radio_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="C"
                android:textSize="16sp"
                android:paddingHorizontal="22dp"
                android:background="@drawable/write_item_selector"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/ic_launcher_checked_foreground"
                android:drawableLeft="@drawable/ic_c"
                android:drawablePadding="10dp"
                android:textStyle="normal"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/res_text_color_black"
                />
            <RadioButton
                android:id="@+id/radio_cshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="C#"
                android:textSize="16sp"
                android:paddingHorizontal="22dp"
                android:background="@drawable/write_item_selector"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/ic_launcher_checked_foreground"
                android:drawableLeft="@drawable/ic_cshop"
                android:drawablePadding="10dp"
                android:textStyle="normal"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/res_text_color_black"
                />
            <RadioButton
                android:id="@+id/radio_kotlin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="Kotlin"
                android:textSize="16sp"
                android:paddingHorizontal="22dp"
                android:background="@drawable/write_item_selector"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/ic_launcher_checked_foreground"
                android:drawableLeft="@drawable/ic_kotlin"
                android:drawablePadding="10dp"
                android:textStyle="normal"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/res_text_color_black"
                />
            <RadioButton
                android:id="@+id/radio_java"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="Java"
                android:textSize="16sp"
                android:paddingHorizontal="22dp"
                android:background="@drawable/write_item_selector"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/ic_launcher_checked_foreground"
                android:drawableLeft="@drawable/ic_java"
                android:drawablePadding="10dp"
                android:textStyle="normal"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/res_text_color_black"
                />
            <RadioButton
                android:id="@+id/radio_swift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="Swift"
                android:textSize="16sp"
                android:paddingHorizontal="22dp"
                android:background="@drawable/write_item_selector"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/ic_launcher_checked_foreground"
                android:drawableLeft="@drawable/ic_swift"
                android:drawablePadding="10dp"
                android:textStyle="normal"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/res_text_color_black"
                />
            <RadioButton
                android:id="@+id/radio_javascript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="Javascript"
                android:textSize="16sp"
                android:paddingHorizontal="22dp"
                android:background="@drawable/write_item_selector"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/ic_launcher_checked_foreground"
                android:drawableLeft="@drawable/ic_javascript"
                android:drawablePadding="10dp"
                android:textStyle="normal"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/res_text_color_black"
                />

        </RadioGroup>


                <Button
                    android:id="@+id/write_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="확인"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:background="@drawable/btn_radius_black"
                    android:textColor="@color/res_btn_color_white"
                    android:layout_marginBottom="8dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="18dp"
                android:visibility="invisible"
                android:id="@+id/write_post_layout"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >


                    <ImageButton
                        android:id="@+id/write_back"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:backgroundTint="@color/cardview_shadow_end_color"
                        app:srcCompat="@drawable/ic_round_keyboard_arrow_left_24"
                        android:padding="0dp"
                        />

                    <EditText
                        android:layout_marginHorizontal="12dp"
                        android:id="@+id/edSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:inputType="textMultiLine"
                        android:hint="Title"
                        android:textColorHint="#aaaaaa"
                        android:background="@drawable/edittext_background"
                        android:fontFamily="@font/pretendard"
                        android:drawableLeft="@drawable/ic_launcher_file_img_foreground"
                        android:layout_weight="1"
                        />

                    <ImageButton
                        android:id="@+id/write_check"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="center"
                        android:background="@drawable/ic_round_check_circle_24"
                        />


                </LinearLayout>


                <EditText
                    android:id="@+id/edtxt_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:background="@null"
                    android:layout_marginTop="38dp"/>


            </LinearLayout>



        </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>