<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize"
    android:background="@drawable/background_color_white"
    tools:context=".ui.post.WriteFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/write_select_language_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/write_checkitem_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="30dp"
                android:scaleType="center"
                android:src="@drawable/ic_round_keyboard_arrow_left_24" />

            <TextView
                android:id="@+id/write_text_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="프로그래밍 언어를\n선택해주세요."
                android:textColor="@color/res_text_color_black"
                android:textSize="28sp"
                android:textStyle="bold" />


            <RadioGroup
                android:id="@+id/write_item_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1">


                <RadioButton
                    android:id="@+id/radio_python"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/write_item_selector"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_python"
                    android:drawableRight="@drawable/ic_launcher_checked_foreground"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingHorizontal="22dp"
                    android:text="Python"
                    android:textColor="@color/res_text_color_black"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:id="@+id/radio_cplpl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/write_item_selector"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_cplpl"
                    android:drawableRight="@drawable/ic_launcher_checked_foreground"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingHorizontal="22dp"
                    android:text="C++"
                    android:textColor="@color/res_text_color_black"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:id="@+id/radio_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/write_item_selector"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_c"
                    android:drawableRight="@drawable/ic_launcher_checked_foreground"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingHorizontal="22dp"
                    android:text="C"
                    android:textColor="@color/res_text_color_black"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:id="@+id/radio_cshop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/write_item_selector"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_cshop"
                    android:drawableRight="@drawable/ic_launcher_checked_foreground"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingHorizontal="22dp"
                    android:text="C#"
                    android:textColor="@color/res_text_color_black"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:id="@+id/radio_kotlin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/write_item_selector"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_kotlin"
                    android:drawableRight="@drawable/ic_launcher_checked_foreground"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingHorizontal="22dp"
                    android:text="Kotlin"
                    android:textColor="@color/res_text_color_black"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:id="@+id/radio_java"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/write_item_selector"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_java"
                    android:drawableRight="@drawable/ic_launcher_checked_foreground"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingHorizontal="22dp"
                    android:text="Java"
                    android:textColor="@color/res_text_color_black"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:id="@+id/radio_swift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/write_item_selector"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_swift"
                    android:drawableRight="@drawable/ic_launcher_checked_foreground"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingHorizontal="22dp"
                    android:text="Swift"
                    android:textColor="@color/res_text_color_black"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:id="@+id/radio_javascript"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/write_item_selector"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_javascript"
                    android:drawableRight="@drawable/ic_launcher_checked_foreground"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingHorizontal="22dp"
                    android:text="Javascript"
                    android:textColor="@color/res_text_color_black"
                    android:textSize="16sp"
                    android:textStyle="normal" />

            </RadioGroup>


            <Button
                android:id="@+id/write_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_radius_black"
                android:fontFamily="@font/pretendard_regular"
                android:text="확인"
                android:textColor="@color/res_btn_color_white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/write_post_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/write_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:backgroundTint="@color/cardview_shadow_end_color"
                    android:padding="0dp"
                    app:srcCompat="@drawable/ic_round_keyboard_arrow_left_24" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardElevation="0dp">


                    <EditText
                        android:id="@+id/edSearch"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@drawable/edittext_background"
                        android:fontFamily="@font/pretendard"
                        android:hint="Title"
                        android:inputType="textMultiLine"
                        android:paddingLeft="40dp"
                        android:textColorHint="#aaaaaa" />

                    <ImageView
                        android:id="@+id/post_img_file"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/ic_launcher_file_img_foreground" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="999dp"
                    app:cardElevation="0dp">

                    <ImageButton
                        android:id="@+id/write_check"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/post_commit_background"
                        android:scaleType="center"
                        android:src="@drawable/ic_round_check_24" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <EditText
                android:id="@+id/edtxt_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="38dp"
                android:background="@null"
                android:gravity="top"
                android:inputType="textMultiLine" />


        </LinearLayout>


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>