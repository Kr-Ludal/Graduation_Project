<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color_white"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/home_BBS"
            android:visibility="visible"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/pretendard_extrab"
                    android:textColor="@color/res_text_color_black"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/imgNotification"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@null"
                    android:layout_gravity="center_vertical"

                    android:padding="0dp"
                    app:srcCompat="@drawable/ic_launcher_bell_foreground" />
            </LinearLayout>


            <EditText
                android:id="@+id/edSearch"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Search"
                android:textColorHint="#aaaaaa"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/pretendard"
                android:drawableLeft="@drawable/group"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                />

            <TextView
                android:id="@+id/Codes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Codes"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pretendard_b"
                android:textSize="14sp"
                android:textColor="@color/res_text_color_black"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/home_listview"
                android:divider="#00000000"
                android:dividerHeight="10dp"
                >
            </ListView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/home_search"
            android:visibility="invisible"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18dp"
                >

                <ImageButton
                    android:id="@+id/write_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:backgroundTint="@color/cardview_shadow_end_color"
                    app:srcCompat="@drawable/ic_launcher_chevron_foreground"
                    android:layout_gravity="center_vertical"
                    />

                <EditText
                    android:id="@+id/edSearch_detail"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:inputType="textPersonName"
                    android:hint="Search"
                    android:textColorHint="#aaaaaa"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="@font/pretendard"
                    android:drawableLeft="@drawable/group"
                    android:paddingLeft="10dp"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    />

            </LinearLayout>



        </LinearLayout>





    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>