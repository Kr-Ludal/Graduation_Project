<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WritepostActivity"
    android:background="@drawable/background_color_white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:visibility="invisible"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_launcher_chevron_foreground"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="프로그래밍 언어를\n선택해주세요."
            android:layout_marginTop="38dp"
            android:textColor="@color/res_text_color_black"
            android:textSize="28sp"
            android:fontFamily="@font/pretendard_regular"
            android:textStyle="bold"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/card_Python"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/img_python"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/fill_1"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/txtpython"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Python"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/res_text_color_black"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/img_python_check"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_launcher_checked_foreground" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/card_cplpl"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/img_cplpl"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/fill_1"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/txtcplpl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C++"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/res_text_color_black"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/img_cplpl_check"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_launcher_checked_foreground" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/cardC"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/img_c"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/fill_1"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/txtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/res_text_color_black"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/img_c_check"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_launcher_checked_foreground" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/card_C"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/img_cshop"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/fill_1"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/txtcshop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C#"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/res_text_color_black"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/img_cshop_check"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_launcher_checked_foreground" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/card_c"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/img_kotiln"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/fill_1"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/txtkotiln"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kotiln"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/res_text_color_black"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/img_kotiln_check"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_launcher_checked_foreground" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/card_java"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/img_java"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/fill_1"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/txtjava"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/res_text_color_black"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/img_java_check"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_launcher_checked_foreground" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/card_swift"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/img_swift"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/fill_1"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/txtswift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Swift"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/res_text_color_black"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/img_swift_check"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_launcher_checked_foreground" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/card_Javascript"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/img_javascript"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/fill_1"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tstjavascript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Javasctipt"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/res_text_color_black"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/img_javascript_check"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_launcher_checked_foreground" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_regular"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_radius_black"
            android:textColor="@color/res_btn_color_white"
            android:layout_marginBottom="8dp"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="18dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >


                <ImageButton
                    android:id="@+id/write_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:backgroundTint="@color/cardview_shadow_end_color"
                    app:srcCompat="@drawable/ic_launcher_chevron_foreground"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:layout_marginHorizontal="18dp"
                    >


                    <EditText
                        android:id="@+id/edtxt_title"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:inputType="textPersonName"
                        android:background="@color/res_background_gray"
                        />

                    <ImageView
                        android:id="@+id/img_file"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        tools:srcCompat="@drawable/ic_launcher_file_img_foreground"

                        />

                </androidx.cardview.widget.CardView>


                <ImageView
                    android:id="@+id/write_check"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    tools:srcCompat="@tools:sample/avatars"

                    />


            </LinearLayout>


            <EditText
                android:id="@+id/edtxt_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:text=""
                android:background="@null"
                android:layout_marginTop="38dp"/>


        </LinearLayout>



    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>